<body>
    <header>
        <h1>Echoverse</h1>
        <p>AI Powered Audiobook Creation Tool</p>
    </header>
    <main>
        <form id="audiobookForm">
            <label for="bookText">Paste Book Text or Upload File</label>
            <textarea id="bookText" rows="8" placeholder="Paste your book text here..."></textarea>
            <input type="file" id="fileInput" accept=".txt,.docx,.pdf">
            <label for="voiceSelect">Select Voice</label>
            <select id="voiceSelect">
                <option value="en-US-JennyNeural">Jenny (English, US)</option>
                <option value="en-US-GuyNeural">Guy (English, US)</option>
                <option value="en-GB-RyanNeural">Ryan (English, UK)</option>
                <option value="en-IN-NeerjaNeural">Neerja (English, India)</option>
            </select>
            <button type="submit" id="generateBtn">Generate Audiobook</button>
        </form>
        <div class="audio-preview" id="audioPreview"></div>
    </main>
    <script>
        // Handle file upload and read as text
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = function(evt) {
                document.getElementById('bookText').value = evt.target.result;
            };
            reader.readAsText(file);
        });

        // Simulate AI audiobook generation (replace with real API integration)
        document.getElementById('audiobookForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const text = document.getElementById('bookText').value.trim();
            const voice = document.getElementById('voiceSelect').value;
            const audioPreview = document.getElementById('audioPreview');
            audioPreview.innerHTML = '';

            if (!text) {
                alert('Please provide book text or upload a file.');
                return;
            }

            document.getElementById('generateBtn').disabled = true;
            audioPreview.innerHTML = '<p>Generating audiobook with AI...</p>';

            // --- Replace this block with real API call to your AI TTS backend ---
            // For demo, use browser SpeechSynthesis to simulate
            const synth = window.speechSynthesis;
            const utter = new SpeechSynthesisUtterance(text.slice(0, 500)); // Limit preview
            utter.voice = synth.getVoices().find(v => v.name.includes(voice.split('-')[2]));
            synth.speak(utter);
            audioPreview.innerHTML = '<p><em>Preview playing using browser TTS (AI integration needed for real audio output).</em></p>';
            // ---------------------------------------------------------------

            document.getElementById('generateBtn').disabled = false;
        });
    </script>
</body>
